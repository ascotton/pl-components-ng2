{
  "name": "pl-components-ng2",
  "version": "3.4.11",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/presencelearning/pl-components-ng2.git"
  },
  "scripts": {
    "ng": "ng",
    "env-dev": "node ./node-scripts/set-env --envkey=dev",
    "env-local": "node ./node-scripts/set-env --envkey=local",
    "env-test": "node ./node-scripts/set-env --envkey=test",
    "env-stag": "node ./node-scripts/set-env --envkey=stag",
    "env-live": "node ./node-scripts/set-env --envkey=live",
    "setup": "npm run env-dev && npm run env-local",
    "start": "npm run setup && ng serve --configuration=local --deployUrl=/components/",
    "prebuild": "gulp prebuild",
    "svg": "gulp bundle_svg",
    "build": "npm run setup && ng build --configuration=local --deployUrl=/components",
    "build-test": "npm run setup && npm run env-test && ng build --configuration=test --deployUrl=/components",
    "build-stag": "npm run setup && npm run env-stag && ng build --configuration=stag --deployUrl=/components",
    "build-live": "npm run setup && npm run env-live && ng build --configuration=production --deployUrl=/components",
    "aot-compile": "npm run setup && ngc -p tsconfig.aot.json",
    "aot-rollup-todo": "npm run setup && rollup -c rollup-config.js",
    "build-aot-todo": "npm run setup && ngc -p tsconfig.aot.json && rollup -c rollup-config.js",
    "lite": "lite-server",
    "test": "ng test",
    "coverage": "ng test --watch=false --browsers ChromeHeadless --codeCoverage --reporters=coverage-istanbul",
    "lint": "ng lint",
    "lint-ts": "tslint --project src/tsconfig.spec.json --format stylish --config tslint.json 'src/**/*.ts'",
    "e2e": "ng e2e --configuration=local --deployUrl=/components",
    "test-unit-ci": "ng test --watch=false --browsers ChromeHeadless",
    "test-all-local": "npm run test-unit-ci && npm run test-e2e-local",
    "test-all-ci": "npm run test-unit-ci && npm run test-e2e-ci",
    "prettier": "./node_modules/.bin/prettier --trailing-comma es5 --single-quote true --tab-width 4 --print-width 120 --write src/**/*.ts"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "10.2.5",
    "@angular/cli": "10.2.3",
    "@angular/common": "10.2.5",
    "@angular/compiler": "10.2.5",
    "@angular/compiler-cli": "10.2.5",
    "@angular/core": "10.2.5",
    "@angular/forms": "10.2.5",
    "@angular/platform-browser": "10.2.5",
    "@angular/platform-browser-dynamic": "10.2.5",
    "@angular/router": "10.2.5",
    "@apollo/client": "^3.0.0",
    "@ngrx/store": "9.2.1",
    "@sentry/browser": "5.29.2",
    "@types/lodash.camelcase": "4.3.6",
    "@types/lodash.omit": "4.5.6",
    "@types/lodash.pick": "4.4.6",
    "@types/lodash.throttle": "4.1.6",
    "apollo-angular": "^2.6.0",
    "core-js": "3.2.1",
    "dotenv": "8.1.0",
    "graphql": "^15.0.0",
    "lodash.camelcase": "4.3.0",
    "lodash.omit": "4.5.0",
    "lodash.pick": "4.4.0",
    "lodash.throttle": "4.1.1",
    "lunr": "2.3.7",
    "moment": "2.24.0",
    "moment-timezone": "0.5.26",
    "rxjs": "6.5.3",
    "tslib": "^2.0.0",
    "typescript": "4.0.8",
    "yargs": "14.2.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1002.3",
    "@types/jasmine": "3.4.2",
    "@types/lodash.template": "4.4.6",
    "@types/lunr": "2.3.2",
    "@types/node": "^12.11.1",
    "cpx": "1.5.0",
    "gulp": "4.0.2",
    "gulp-svgo": "2.1.1",
    "gulp-template": "5.0.0",
    "jasmine": "3.5.0",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-cli": "2.0.0",
    "karma-coverage": "2.0.1",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "karma-junit-reporter": "1.2.0",
    "karma-spec-reporter": "0.0.32",
    "less": "3.10.3",
    "lite-server": "2.5.4",
    "lodash.template": "4.5.0",
    "through2": "3.0.1",
    "ts-mockito": "2.5.0",
    "ts-node": "8.4.1",
    "tslint": "~6.1.0",
    "tslint-config-pl": "git+ssh://git@github.com/presencelearning/tslint-config-pl.git#semver:~0.1.0",
    "webpack": "4.41.0"
  }
}
